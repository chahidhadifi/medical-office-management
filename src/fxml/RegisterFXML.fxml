    <children>
      <TextField fx:id="txtUsername" layoutX="102.0" layoutY="130.0" prefHeight="52.0" prefWidth="283.0" promptText="Username">
         <font>
            <Font name="Consolas" size="13.0" />
         </font>
      </TextField>
          <TextField fx:id="txtEmail" layoutX="103.0" layoutY="202.0" prefHeight="52.0" prefWidth="283.0" promptText="Email address">
         <font>
            <Font name="Consolas" size="13.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="103.0" layoutY="273.0" prefHeight="52.0" prefWidth="283.0" promptText="Password">
         <font>
            <Font name="Consolas" size="13.0" />
         </font>
      </PasswordField>
          <Label fx:id="lblErrors" alignment="CENTER" layoutX="107.0" layoutY="334.0" prefHeight="23.0" prefWidth="275.0" textFill="#ff6354">
              <font>
                  <Font name="Consolas" size="13.0" />
              </font>
          </Label>
      <Label layoutX="126.0" layoutY="455.0" text="Already have an account?">
         <font>
            <Font name="Consolas" size="13.0" />
         </font>
      </Label>
      <Label layoutX="198.0" layoutY="60.0" text="Sign up">
         <font>
            <Font name="Consolas" size="24.0" />
         </font>
      </Label>
